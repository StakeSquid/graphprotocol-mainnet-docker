set -o allexport; source .env; set +o allexport; envsubst < graph-node-configs/config.tmpl > graph-node-configs/config.toml

set -o allexport; source .env; set +o allexport; envsubst < indexer-agent-configs/goerli.tmpl > indexer-agent-configs/goerli.yaml

set -o allexport; source .env; set +o allexport; envsubst < indexer-agent-configs/arbi-goerli.tmpl > indexer-agent-configs/arbi-goerli.yaml

docker-compose -f compose-optional.yml up -d --build $@

grep -q "^INDEXER_AGENT_MULTINETWORK_MODE=false$" .env && docker kill indexer-service-arbi-goerli
